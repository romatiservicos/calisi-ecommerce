	    $('#em0121_general_disable_animate_loading').change(function(){
		    var b = $('#em0121_general_disable_animate_loading').val();
		    if(b!=true){
		        $('#row_em0121_general_animate_header').show();
		        $('#row_em0121_general_animate_left').show();
	            $('#row_em0121_general_animate_right').show();
		        $('#row_em0121_general_animate_main').show();
	            $('#row_em0121_general_animate_footer').show();
		    }else{
		        $('#row_em0121_general_animate_header').hide();
		        $('#row_em0121_general_animate_left').hide();
	            $('#row_em0121_general_animate_right').hide();
		        $('#row_em0121_general_animate_main').hide();
