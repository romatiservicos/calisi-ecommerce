<?xml version="1.0"?>
<config>
    <modules>
        <EM_Newproducts>
            <version>0.1.0</version>
        </EM_Newproducts>
    </modules>
    <frontend>
        <routers>
            <newproducts>
                <use>standard</use>
                <args>
                    <module>EM_Newproducts</module>
                    <frontName>newproducts</frontName>
                </args>
            </newproducts>
        </routers>
        <layout>
            <updates>
                <newproducts>
                    <file>newproducts.xml</file>
                </newproducts>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<newproducts>
				<use>admin</use>
				<args>
					<module>EM_Newproducts</module>
					<frontName>newproducts</frontName>
				</args>
			</newproducts>
        </routers>
    </admin>
    
    <global>
        <models>
            <newproducts>
                <class>EM_Newproducts_Model</class>
            </newproducts>
        </models>
        <blocks>
            <newproducts>
                <class>EM_Newproducts_Block</class>
            </newproducts>
        </blocks>
        <helpers>
            <newproducts>
                <class>EM_Newproducts_Helper</class>
            </newproducts>
        </helpers>
    </global>
</config>